# CodeGraphContext Configuration
# Location: C:\Users\mose\.codegraphcontext\.env

# ===== Database Credentials =====
NEO4J_PASSWORD=Mose1212!
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j

# ===== Configuration Settings =====
# Allow full database deletion commands
ALLOW_DB_DELETION=false

# Enable caching for faster re-indexing
CACHE_ENABLED=true

# Cyclomatic complexity warning threshold
COMPLEXITY_THRESHOLD=10

# Enable debug logging (for development/troubleshooting)
DEBUG_LOGS=false

# Path to debug log file
DEBUG_LOG_PATH=C:\Users\mose\mcp_debug.log

# Default database backend (neo4j|falkordb)
DEFAULT_DATABASE=neo4j

# Application log level (DEBUG|INFO|WARNING|ERROR|CRITICAL|DISABLED)
ENABLE_APP_LOGS=CRITICAL

# Automatically watch directory after indexing
ENABLE_AUTO_WATCH=false

# Path to FalkorDB database file
FALKORDB_PATH=C:\Users\mose\.codegraphcontext\falkordb.db

# Path to FalkorDB Unix socket
FALKORDB_SOCKET_PATH=C:\Users\mose\.codegraphcontext\falkordb.sock

# Comma-separated list of directory names to ignore during indexing
IGNORE_DIRS=node_modules,venv,.venv,env,.env,dist,build,target,out,.git,.idea,.vscode,__pycache__

# Skip hidden files/directories
IGNORE_HIDDEN_FILES=true

# Skip test files during indexing
IGNORE_TEST_FILES=false

# Store full source code in graph database (for faster indexing use false, for better performance use true)
INDEX_SOURCE=true

# Index variable nodes in the graph (lighter graph if false)
INDEX_VARIABLES=true

# Path to application log file
LOG_FILE_PATH=C:\Users\mose\.codegraphcontext\logs\cgc.log

# Maximum directory depth for indexing (unlimited or number)
MAX_DEPTH=unlimited

# Maximum file size to index (in MB)
MAX_FILE_SIZE_MB=10

# Number of parallel indexing workers
PARALLEL_WORKERS=4

