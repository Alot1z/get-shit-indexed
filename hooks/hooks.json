{
  "preSession": ["start-cg-server.ps1"],
  "postSession": [],
  "pretooluse": {
    "mcp-enforcer": {
      "enabled": true,
      "trigger": "Read|Write|Edit|Grep|Glob|Bash",
      "priority": 0,
      "module": "hooks/pre-tool-use/mcp-enforcer.js",
      "description": "Blocks native tools when MCP alternatives exist. Enforces tool precedence hierarchy for 80-90% token savings."
    },
    "bash-redirect": {
      "enabled": true,
      "trigger": "Bash|bash",
      "priority": 1,
      "module": "hooks/pre-tool-use/bash-redirect.js",
      "description": "Redirects native Bash to Desktop Commander start_process for reliability"
    },
    "prompt-enhancer": {
      "enabled": true,
      "trigger": "/gsi:|/gsd:",
      "priority": 5,
      "module": "hooks/pre-tool-use/prompt-enhancer.js"
    },
    "complexity-check": {
      "enabled": true,
      "trigger": "Task|execute-phase|execute-plan",
      "priority": 10,
      "module": "hooks/pre-tool-use/complexity-check.js"
    },
    "thinking-invoke": {
      "enabled": true,
      "trigger": "all",
      "priority": 15,
      "module": "hooks/pre-tool-use/thinking-invoke.js"
    }
  },
  "thinking": {
    "enabled": true,
    "toolMapping": {
      "start_process": "standard",
      "execute": "standard",
      "interact_with_process": "standard",
      "read_multiple_files": "lightweight",
      "write_file": "standard",
      "edit_block": "standard",
      "search_code_advanced": "standard",
      "build_deep_index": "comprehensive",
      "query": "comprehensive",
      "analyze_code_relationships": "comprehensive"
    },
    "modes": {
      "lightweight": {
        "description": "Quick thinking for simple operations",
        "cycles": [1, 3],
        "thinkingServers": ["sequential"]
      },
      "standard": {
        "description": "Full thinking for normal operations",
        "cycles": [1, 2, 3, 7],
        "thinkingServers": ["tractatus", "sequential", "debug"]
      },
      "comprehensive": {
        "description": "Deep thinking for complex operations",
        "cycles": [1, 2, 3, 4, 5, 6, 7],
        "thinkingServers": ["tractatus", "sequential", "debug"],
        "ultrathink": true
      }
    }
  },
  "_comment": "PreToolUse hooks are configured in .claude/settings.json or user settings",
  "posttooluse": {
    "reflection-capture": {
      "enabled": true,
      "useMCP": true,
      "triggerConditions": {
        "always": false,
        "errors": true,
        "significant": true,
        "thinking": true,
        "sequential": true,
        "tractatus": true,
        "debug": true,
        "file_operations": true,
        "code_operations": true,
        "relationship_operations": true
      }
    }
  }
}
